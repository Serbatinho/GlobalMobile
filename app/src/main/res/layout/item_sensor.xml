<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textSensorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Sensor"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/textSensorOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProprietÃ¡rio do Sensor"
        android:textSize="14sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/textSensorMeasures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medidas"
        android:textSize="12sp"
        android:paddingBottom="8dp" />

    <Button
        android:id="@+id/buttonEditSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar" />
</LinearLayout>
